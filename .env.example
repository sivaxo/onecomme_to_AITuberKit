# ========================================
# OneComme connection settings
# ========================================
# WebSocket URL は OneComme の配信設定画面で確認できます。
# 配信ごとにユニークな ID が発行されている場合は以下のような形式になります。
#   ws://localhost:11180/api/director/{STREAM_ID}
# 例: STREAM_ID=40119f53-ac18-4fe3-8f8d-eba65551a46a
#     → ONECOMME_WS_URL=ws://localhost:11180/api/director/{STREAM_ID}
#        ONECOMME_STREAM_IDS=40119f53-ac18-4fe3-8f8d-eba65551a46a
# 複数配信を同時処理する場合はカンマ区切りで指定してください。
ONECOMME_WS_URL=ws://localhost:11180/api/director/{STREAM_ID}
ONECOMME_STREAM_IDS=
# あるいは ONECOMME_WS_URLS に完全な WebSocket URL を列挙できます。
# ONECOMME_WS_URLS=ws://localhost:11180/api/director/ID1,ws://localhost:11180/api/director/ID2
ONECOMME_WS_URLS=

# ========================================
# AITuberKit connection settings
# ========================================
AITUBERKIT_BASE_URL=http://192.168.0.11:3000
AITUBERKIT_CLIENT_ID=e86d3ff3-ba67-49e3-b4bf-1a2fa515d7f1
AITUBERKIT_TIMEOUT=30
USE_AITUBERKIT_SYSTEM_PROMPT=true

# ========================================
# Queue & processing settings
# ========================================
MAX_QUEUE_SIZE=20
ALLOW_CONCURRENT_RESPONSE=false

# ========================================
# Trigger word settings
# ========================================
TRIGGER_WORDS=教えて,質問,聞きたい,どう思う,どう考える,なんで,どうして

# ========================================
# Greeting settings
# ========================================
GREETING_FIRST={username}さん、はじめまして！
GREETING_RETURN={username}さん、また来てくれてありがとう！
USE_GREETING=true

# ========================================
# Stage B judgement settings
# ========================================
MIN_COMMENT_LENGTH=2
IGNORE_PATTERNS=w,草,8888,88888888,!,！,？？？
POSITIVE_KEYWORDS=?,？,どう,何,いつ,どこ,だれ,誰,教えて

# ========================================
# Stage A judgement settings
# ========================================
ENABLE_LLM_JUDGE=true
LLM_JUDGE_CPU_THRESHOLD=60

# ========================================
# Load management
# ========================================
MAX_CPU_USAGE=80
CPU_CHECK_INTERVAL=5

# ========================================
# Logging & stats
# ========================================
LOG_LEVEL=INFO
LOG_FILE=logs/system.log
STATS_FILE=logs/stats.json
DEBUG_MODE=false
SHOW_ALL_COMMENTS=false
